{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "config/*": ["config/*"],
      "decorators/*": ["decorators/*"],
      "guard/*": ["guard/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"]
}
